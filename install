#!/bin/sh -e

DIR=`pwd`/`dirname $0`

# Haskell general
sudo apt-get -y install cabal-install
[ -d ~/.cabal ] || cabal update

# XMonad
cabal install xmonad xmonad-extras

mkdir -p ~/.xmonad
ln -sf $DIR/xmonad.hs ~/.xmonad

# Taffybar
sudo apt-get -y install gtk2hs-buildtools libgtk2.0-dev libxml2-dev

TMP_TAFFYBAR=$(mktemp -du)
git clone https://github.com/koterpillar/taffybar $TMP_TAFFYBAR
cd $TMP_TAFFYBAR
cabal install
cd - >/dev/null

ln -sf $DIR/taffybar ~/.config

# Synapse
sudo apt-get -y install synapse zeitgeist-extension-fts
ln -sf $DIR/synapse ~/.config

# IBus
sudo apt-get -y install ibus ibus-pinyin ibus-table ibus-m17n

# Session script
sudo install default.desktop /usr/share/xsessions
sudo apt-get -y install notify-osd xcompmgr

ln -sf $DIR/.xsession ~

sudo apt-get -y autoremove
