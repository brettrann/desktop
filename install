#!/bin/sh -e

DIR=`pwd`/`dirname $0`

# XSession script
sudo install default.desktop /usr/share/xsessions

# XMonad
sudo apt-get -y install cabal-install xmonad \
	libghc-gconf-dev libghc-missingh-dev

mkdir -p ~/.xmonad
ln -sf $DIR/xmonad.hs ~/.xmonad

# Taffybar
if ghc -e 'System.Taffybar.screenNumber System.Taffybar.defaultTaffybarConfig' 2>&1 | grep -q Failed
then
	cabal update
	sudo apt-get -y install gtk2hs-buildtools libghc-cairo-dev libghc-gtk-dev \
		libgtk-3-dev

	# Taffybar requires gtk-traymanager, which is buggy - install a fork
	if [ ! -d /tmp/gtk-traymanager ]
	then
		mkdir -p /tmp/gtk-traymanager
		git clone git@github.com:koterpillar/gtk-traymanager.git /tmp/gtk-traymanager
	fi
	cd /tmp/gtk-traymanager
	git pull
	cabal install gtk-traymanager.cabal
	cd - >/dev/null

	cabal install current-locale

	cabal install taffybar
fi

sudo apt-get -y install light-themes

ln -sf $DIR/taffybar ~/.config

# Synapse
sudo apt-get -y install synapse zeitgeist-extension-fts
ln -sf $DIR/synapse ~/.config

# IBus
sudo apt-get -y install ibus ibus-pinyin ibus-table

# Session script
sudo apt-get -y purge feh
sudo apt-get -y install notify-osd
sudo apt-get -y purge notification-daemon
killall -q notification-daemon

gconftool -s /apps/gnome_settings_daemon/keybindings/www -t string ''
gconftool -s /apps/gnome_settings_daemon/keybindings/email -t string ''

ln -sf $DIR/.xsession ~

sudo apt-get -y autoremove
