[user]
	name = Alexey Kotlyarov
	email = a@koterpillar.com
[color]
	ui = auto
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[alias]
	taga = !git tag -a -m $1
	merge-pr = !git checkout master && git fetch && git reset --hard origin/master && git merge --no-ff --no-edit $1 && git push && git push origin --delete $1 && git branch -d
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
	insteadOf = git://github.com/
