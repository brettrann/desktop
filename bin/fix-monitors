#!/bin/sh -e

case $(hostname) in
	shancha)
		xrandr --auto
		if xrandr | grep -q "HDMI1 connected"
		then
			xrandr --output HDMI1 --mode 1920x1080 --above LVDS1
			pactl set-card-profile 0 output:hdmi-stereo
		elif xrandr | grep -q "HDMI2 connected"
		then
			xrandr --output HDMI2 --mode 1920x1080 --above LVDS1
			pactl set-card-profile 0 output:hdmi-stereo-extra1
		else
			pactl set-card-profile 0 output:analog-stereo
		fi
	;;
	devs-alexey)
		xrandr --output DVI-1 --auto --right-of DVI-0
	;;
esac
killall tianbar
tianbar &
. ~/.fehbg
