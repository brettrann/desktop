pixmap_path "~/.config/taffybar"

style "taffybar" {
    bg_pixmap[NORMAL] = "background-crop.jpeg"
    fg[NORMAL] = "#000000"
    text[NORMAL] = "#000000"
}

style "taffybar-notification" = "default" {
  fg[NORMAL] = "#FF0000"
}

widget "Taffybar*" style "taffybar"
widget "*NotificationCloseButton" style "taffybar-notification"
